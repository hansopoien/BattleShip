<UserControl x:Class="BattleShip.Views.Pages.StartPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattleShip.Views.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
        <Label Content="Hej! :)" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Gray" Foreground="DarkOrange"/>
            <Button Command="{Binding StartGameCommand}">
                <StackPanel>
                    <Image Source="/Images/Figma Test.png" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
